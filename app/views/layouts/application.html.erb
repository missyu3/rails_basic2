<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <a class="header_logo">Facebook_Clone<a>
      <% if logged_in? %>
        <li class="header_content"><%= "名前 : #{current_user.name }"%></li>
        <li class="header_content"><%= link_to "Profile", user_path(current_user.id) %></li>
        <li class="header_content"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
      <% else %>
        <%= link_to "Sign up", new_user_path %>
        <%= link_to "Login", new_session_path %>
      <% end %>
    </header>
    <%= yield %>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  </body>
</html>
